{
  "name": "shared",
  "module": "index.ts",
  "type": "module",
  "devDependencies": {
    "@testcontainers/postgresql": "^10.18.0",
    "drizzle-kit": "^0.30.4",
    "openapi-typescript": "^7.6.1"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@hono/zod-validator": "^0.4.2",
    "@react-native-async-storage/async-storage": "1.23.1",
    "dotenv": "^16.4.7",
    "drizzle-orm": "^0.39.2",
    "drizzle-valibot": "^0.4.0",
    "drizzle-zod": "^0.7.0",
    "gen": "*",
    "hono": "^4.7.2",
    "i18next": "^24.2.2",
    "localforage": "^1.10.0",
    "next-international": "^1.3.1",
    "openapi-typescript-fetch": "^2.1.0",
    "postgres": "^3.4.5",
    "qs": "^6.14.0",
    "react": "18.3.1",
    "react-i18next": "^15.4.1",
    "uuid": "^11.0.5"
  },
  "scripts": {
    "build-check": "tsc --noEmit",
    "test": "NODE_ENV=test npm run test:setup && npm run test:unit && npm run test:cleanup",
    "test:unit": "node --test",
    "test:setup": "docker compose up test_db -d && npm run wait:db && npm run db:migrate && npm run db:seed",
    "test:cleanup": "docker compose stop test_db",
    "wait:db": "node --test index.ts",
    "plop": "plop",
    "postplop": "biome format --write .",
    "update": "npm-check-updates -u",
    "db:generate": "drizzle-kit generate --config=drizzle.config.ts",
    "db:push": "drizzle-kit push",
    "db:migrate": "drizzle-kit migrate",
    "db:seed": "node db/seed/index.ts"
  }
}

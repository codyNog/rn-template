{
  "name": "npm-workspace",
  "main": "expo-router/entry",
  "module": "expo-router/entry",
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@codynog/csv-i18n": "^2025.4.1",
    "@happy-dom/global-registrator": "^17.0.0",
    "@markuplint/jsx-parser": "^4.7.15",
    "@markuplint/react-spec": "^4.5.15",
    "@playwright/test": "^1.50.1",
    "@storybook/react": "^8.6.14",
    "@storybook/test": "^8.6.14",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.13.1",
    "@types/react": "~19.0.10",
    "@vitest/coverage-v8": "^3.0.7",
    "@vitest/ui": "^3.0.7",
    "babel-preset-expo": "~13.0.0",
    "cspell": "^8.17.3",
    "happy-dom": "^17.0.0",
    "http-server": "^14.1.1",
    "knip": "^5.43.6",
    "npm-check-updates": "^17.1.14",
    "npm-run-all": "^4.1.5",
    "only-allow": "^1.2.1",
    "papaparse": "^5.5.2",
    "plop": "^4.0.1",
    "typescript": "^5.7.3",
    "vitest": "^3.0.7",
    "wait-on": "^8.0.2"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "scripts": {
    "preinstall": "npx only-allow npm",
    "postinstall": "node -e \"process.exit(process.env.CI ? 0 : 1)\" && npm run postinstall:ci || npm run postinstall:nonci",
    "postinstall:ci": "npm run gen",
    "postinstall:nonci": "npm run postinstall:ci && npx -y @codynog/ai-rules",
    "shared": "npm run --workspace=shared",
    "server": "npm run --workspace=server",
    "convex": "npm run --workspace=shared convex",
    "sandbox": "npm run --workspace=sandbox",
    "ui": "npm run --workspace=ui",
    "check-dependencies": "knip",
    "lint": "npx run-p lint:*",
    "lint:script": "biome check .",
    "lint:spell": "cspell . --no-progress",
    "storybook": "echo Please start in each environment",
    "format": "biome check --write .",
    "dev": "npx run-p \"web\" \"web:dev\" \"server:dev\" \"shared:dev\"",
    "server:dev": "npm run --workspace=server dev",
    "shared:dev": "npm run --workspace=shared dev",
    "shared:dev:local": "npm run --workspace=shared dev:local",
    "shared:dev:cloud": "npm run --workspace=shared dev:cloud",
    "shared:dashboard": "npm run --workspace=shared predev",
    "shared:logs": "npm run --workspace=shared logs",
    "test": "vitest run",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:workspaces": "npm run --workspaces test",
    "gen": "npx run-p gen:*",
    "gen:ui": "npx -y @omni-stove/ui --extract packages/ui",
    "gen:i18n": "csv-i18n --input i18n --output packages/gen/i18n",
    "gen:schema": "npm run shared db:generate && npm run server local:migration",
    "knip": "knip",
    "build-check": "npm run --if-present --workspaces build-check",
    "update": "npm-check-updates -u && npm run --workspaces update",
    "watch": "npx run-p watch:*",
    "watch:i18n": "csv-i18n --input i18n --output packages/gen/i18n --watch",
    "reset-project": "node ./scripts/reset-project.js",
    "start": "expo start",
    "android": "expo start --android",
    "ios": "expo start --ios",
    "web": "expo start --web",
    "web:dev": "npm run --workspace=web dev",
    "plop": "plop"
  },
  "type": "module",
  "workspaces": ["packages/*"],
  "dependencies": {
    "@babel/runtime": "^7.27.1",
    "@expo/metro-runtime": "~5.0.4",
    "@expo/vector-icons": "^14.1.0",
    "@hookform/resolvers": "^3.10.0",
    "@react-navigation/bottom-tabs": "^7.3.10",
    "@react-navigation/elements": "^2.3.8",
    "@react-navigation/native": "^7.1.6",
    "@tamagui/font-inter": "^1.125.22",
    "@tanstack/react-query": "^5.80.2",
    "convex": "^1.24.8",
    "expo": "~53.0.9",
    "expo-blur": "~14.1.4",
    "expo-constants": "~17.1.6",
    "expo-font": "~13.3.1",
    "expo-haptics": "~14.1.4",
    "expo-image": "~2.1.7",
    "expo-linking": "~7.1.5",
    "expo-localization": "~16.1.5",
    "expo-router": "~5.0.6",
    "expo-splash-screen": "~0.30.8",
    "expo-status-bar": "~2.2.3",
    "expo-symbols": "~0.4.4",
    "expo-system-ui": "~5.0.7",
    "expo-web-browser": "~14.1.6",
    "gen": "*",
    "ui": "*",
    "shared": "*",
    "i18n-js": "^4.5.1",
    "i18next": "^23.16.8",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "react-hook-form": "^7.57.0",
    "react-i18next": "^15.4.0",
    "react-native": "0.79.2",
    "react-native-gesture-handler": "~2.24.0",
    "react-native-reanimated": "~3.17.4",
    "react-native-safe-area-context": "5.4.0",
    "react-native-screens": "~4.11.1",
    "react-native-web": "~0.20.0",
    "react-native-webview": "13.13.5",
    "zod": "^3.24.1"
  }
}

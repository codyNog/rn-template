{
  "name": "bun-workspace",
  "module": "index.ts",
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@codynog/cody-rn-ui": "^2025.2.6",
    "@expo/webpack-config": "^19.0.1",
    "@happy-dom/global-registrator": "^16.6.0",
    "@markuplint/jsx-parser": "^4.7.14",
    "@markuplint/react-spec": "^4.5.14",
    "@playwright/test": "^1.49.1",
    "@types/bun": "^1.1.17",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.7",
    "bun-types": "^1.1.45",
    "cspell": "^8.17.2",
    "happy-dom": "^16.6.0",
    "http-server": "^14.1.1",
    "knip": "^5.42.2",
    "npm-check-updates": "^17.1.14",
    "npm-run-all": "^4.1.5",
    "only-allow": "^1.2.1",
    "orval": "^7.4.1",
    "papaparse": "^5.5.1",
    "plop": "^4.0.1",
    "typescript": "^5.7.3",
    "wait-on": "^8.0.2"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "scripts": {
    "preinstall": "npx only-allow bun",
    "postinstall": "bun gen && bun cody-rn-ui --output packages/ui",
    "app": "bun --filter app",
    "shared": "bun --filter shared",
    "server": "bun --filter server",
    "ui": "bun --filter ui",
    "check-dependencies": "knip",
    "lint": "bun run --bun run-p lint:*",
    "lint:script": "biome check .",
    "lint:spell": "cspell . --no-progress",
    "storybook": "echo Please start in each environment",
    "format": "biome check --write .",
    "dev": "bun --filter '*' dev",
    "test": "bun --filter '*' test",
    "gen": "bun run --bun run-p gen:*",
    "gen:i18n": "bun i18n/index.js",
    "knip": "knip",
    "build-check": "bun --filter '*' build-check",
    "update": "npm-check-updates -u & bun --filter '*' update"
  },
  "type": "module",
  "workspaces": ["packages/*"],
  "dependencies": {
    "zod": "^3.24.1"
  }
}
